<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/num1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="56dp" />

    <EditText
        android:id="@+id/num2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/num1"
        android:layout_marginEnd="74dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="56dp" />


    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:text="+"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="186dp" />

    <Button
        android:id="@+id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/add"
        android:layout_toEndOf="@+id/add"
        android:text="-"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="186dp" />

    <Button
        android:id="@+id/mul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/add"
        android:layout_toEndOf="@+id/sub"
        android:text="*"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="186dp" />

    <Button
        android:id="@+id/div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/add"
        android:layout_toEndOf="@+id/mul"
        android:text="/"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="186dp" />

    <Button
        android:id="@+id/sin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add"
        android:text="sin"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/cos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add"
        android:layout_toEndOf="@+id/add"
        android:text="cos"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/tan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cos"
        android:layout_toEndOf="@+id/sub"
        android:text="tan"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/sqrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add"
        android:layout_toEndOf="@+id/mul"
        android:text="sqrt"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sin"
        android:text="save"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="279dp" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sin"
        android:layout_toEndOf="@+id/add"
        android:text="clear"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="279dp" />

    <Button
        android:id="@+id/recall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sin"
        android:layout_toEndOf="@+id/sub"
        android:text="recall"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="279dp" />

    <Button
        android:id="@+id/fileread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sin"
        android:layout_toEndOf="@+id/mul"
        android:text="fileread"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="279dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="253dp"
        android:layout_height="39dp"
        android:layout_alignEnd="@+id/div"
        android:layout_alignParentTop="true"
        android:text="Enter the Numbers"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="10dp" />

    <TextView
        android:id="@+id/res"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:layout_alignEnd="@+id/div"
        android:layout_alignParentTop="true"
        android:layout_marginTop="162dp"
        android:text="Result"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="122dp" />


</RelativeLayout>
